extends layout

block content
    h1 #{title}
    form(method='POST', action='/departments/add')
        #form-group
            label Department ID:
            input.form-control(type='number', min='1', max='3', name="deptId")
        #form-group
            label Department Name:
            input.form-control(name='deptname', type='text', id='deptname')
        br
        input.btn.btn-primary(type='submit', value='Submit')