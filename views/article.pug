extends layout

block content
    h1= article.title
    h5 Written by #{author}
    p= article.body
    br
    if user
        if user.id == article.author
            a.btn.btn-primary(href='/articles/edit/'+article._id) Edit
            a.btn.btn-danger.pull-right.delete-article(href='#',data-id=article._id) Delete
